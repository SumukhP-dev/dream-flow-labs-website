<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/DreamFlowLabs.styles.css" asp-append-version="true" />
</head>

<body>
	<!-- 👇 new wrapper -->
	<div class="d-flex flex-column min-vh-100">
		<header>
			<nav class="navbar navbar-expand-lg navbar-light navbar-glass shadow-sm fixed-top">
				<div class="container">
					<a class="navbar-brand d-flex align-items-center" asp-page="/Index">
						<!-- Logo updated: New design with tagline -->
						<img src="~/images/dreamflow-labs-logo-final.png?v=1" alt="Dreamflow Labs" class="nav-logo" asp-append-version="true" />
					</a>

					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
							aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
						<ul class="navbar-nav ms-auto">
							<li class="nav-item">
								<a class="nav-link" asp-page="/About">About</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/DreamflowAI">Dreamflow AI</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-page="/Founder">Founder</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-page="/Contact">Contact</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>

			<!-- space for fixed navbar -->
			<div style="height: 65px;"></div>
		</header>

		<!-- 👇 main content area grows to fill free space -->
		<div class="container flex-grow-1">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>

		<!-- 👇 mt-auto pushes footer to bottom -->
		<footer class="border-top">
			<div class="container py-4">
				&copy; 2025 – DreamFlowLabs
			</div>
		</footer>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	<script>
		window.addEventListener('scroll', function () {
			const navbar = document.querySelector('.navbar-glass');
			if (window.scrollY > 40) {
				navbar.classList.add('scrolled');
			} else {
				navbar.classList.remove('scrolled');
			}
		});
	</script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>